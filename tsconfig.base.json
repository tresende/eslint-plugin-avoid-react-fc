{
  "compilerOptions": {
    "baseUrl": "src",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "incremental": true
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"]
}
